<%= form_with url: search_promotions_path, method: :get, local: true do |f| %>
    <%= f.label :q, 'Busca de promoção' %>
    <%= f.text_field :q %>
    <%= f.submit 'Buscar' %>
<% end %>

<% if @promotions.empty? %>
    <p>Nenhuma promoção cadastrada</p>
<% else %>    
    <dl>
      <% @promotions.each do |promotion| %>
        <dt>Nome</dt>
        <dd><%= link_to promotion.name, promotion %></dd>
        <dt>Descrição</dt>
        <dd><%= promotion.description %></dd>
        <dt>Porcentagem de desconto</dt>
        <dd><%= number_to_percentage promotion.discount_rate, precision:2, separator: ',' %></dd>
        <hr>
      <% end %>
    </dl>
<% end %>

<%= link_to 'Registrar uma promoção', new_promotion_path %>
<%= link_to 'Voltar', root_path %>